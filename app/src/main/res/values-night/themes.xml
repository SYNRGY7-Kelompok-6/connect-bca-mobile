<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ConnectBCA" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/neutral01</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimaryLight</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryLight</item>
        <item name="colorOnSecondary">@color/neutral01</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your dark theme here. -->
        <item name="android:textColorPrimary">@color/neutral01</item>
        <item name="android:buttonTint">@color/colorPrimary</item>
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="ProgressBar">
        <item name="indicatorColor">@color/colorPrimary</item>
        <item name="trackColor">@color/colorPrimaryLight</item>
    </style>

    <style name="AlertDialog">
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>
</resources>