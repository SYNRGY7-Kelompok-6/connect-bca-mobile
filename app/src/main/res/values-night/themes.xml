<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.ConnectBCA" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/neutral09</item>
        <item name="colorOnPrimary">@color/neutral01</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimaryLight</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryLight</item>
        <item name="colorOnSecondary">@color/neutral09</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your dark theme here. -->
        <item name="android:textColorPrimary">@color/neutral01</item>
        <item name="android:buttonTint">@color/colorPrimary</item>
        <item name="iconTint">@color/neutral01</item>
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="ThemeOverlay.App.DatePicker" parent="@style/ThemeOverlay.Material3.MaterialCalendar">
        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="colorOnPrimary">@color/colorPrimaryDark</item>
        <!-- Customize text field of the text input mode. -->
        <item name="android:textColor">@color/neutral01</item>
    </style>

    <style name="ProgressBar">
        <item name="indicatorColor">@color/colorPrimary</item>
        <item name="trackColor">@color/colorPrimaryLight</item>
    </style>

    <style name="AlertDialog">
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="CardBackground">
        <item name="backgroundTint">@color/neutral04</item>
    </style>
    <style name="recepient_card">
        <item name="background">@color/neutral06</item>
    </style>

    <style name="tab_color">
        <item name="tabTextColor">@color/neutral01</item>
        <item name="tabSelectedTextColor">@color/neutral01</item>
        <item name="strokeColor">@color/neutral01</item>
    </style>

    <!-- Style for PIN circles -->
    <style name="PinCircle">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/empty_circle_background</item>
    </style>

    <!-- Style for keypad buttons -->
    <style name="KeypadButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_width">115dp</item>
        <item name="android:layout_height">82dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/neutral01</item>
        <item name="android:backgroundTintMode">multiply</item>
        <item name="iconTint">@color/neutral01</item>
    </style>

    <style name="backspaceButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_width">115dp</item>
        <item name="android:layout_height">82dp</item>
    </style>

</resources>