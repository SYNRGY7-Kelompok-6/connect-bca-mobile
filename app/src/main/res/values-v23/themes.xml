<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.ConnectBCA" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Transparent system bars for edge-to-edge. -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
        <item name="android:textColorPrimary">@color/neutral09</item>
        <item name="android:buttonTint">@color/colorPrimaryDark</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryLight</item>
        <item name="colorOnPrimary">@color/colorPrimaryDark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/neutral09</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryLight</item>
        <item name="colorOnSecondary">@color/colorPrimary</item>
    </style>

    <style name="ProgressBar">
        <item name="indicatorColor">@color/colorPrimaryLight</item>
        <item name="trackColor">@color/colorPrimary</item>
    </style>

    <style name="AlertDialog">
        <item name="backgroundTint">@color/colorPrimaryDark</item>
    </style>

    <style name="CardBackground">
        <item name="backgroundTint">@color/colorPrimaryLight</item>
    </style>

</resources>