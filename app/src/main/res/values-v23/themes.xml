<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.ConnectBCA" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Transparent system bars for edge-to-edge. -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
        <item name="android:textColorPrimary">@color/neutral09</item>
        <item name="android:buttonTint">@color/colorPrimaryDark</item>
        <item name="iconTint">@color/colorPrimaryDark</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryLight</item>
        <item name="colorOnPrimary">@color/colorPrimaryDark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/neutral09</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryLight</item>
        <item name="colorOnSecondary">@color/colorPrimary</item>

        <item name="colorBackgroundInput">@color/colorPrimaryLight</item>
        <item name="strokeColor">@color/neutral01</item>
    </style>

    <style name="ThemeOverlay.App.DatePicker" parent="@style/ThemeOverlay.Material3.MaterialCalendar">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/neutral01</item>
        <!-- Customize text field of the text input mode. -->
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="ProgressBar">
        <item name="indicatorColor">@color/colorPrimaryLight</item>
        <item name="trackColor">@color/colorPrimary</item>
    </style>

    <style name="AlertDialog">
        <item name="backgroundTint">@color/colorPrimaryDark</item>
    </style>

    <style name="CardBackground">
        <item name="backgroundTint">@color/colorPrimaryLight</item>
    </style>

    <style name="recepient_card">
        <item name="android:background">@color/colorPrimaryLight</item>
    </style>
    
    <style name="tab_color">
        <item name="tabTextColor">@color/neutral09</item>
        <item name="tabSelectedTextColor">@color/neutral01</item>
        <item name="strokeColor">@color/colorPrimary</item>
    </style>

    <!-- Style for PIN circles -->
    <style name="PinCircle">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/empty_circle_background</item>
    </style>

    <!-- Style for keypad buttons -->
    <style name="KeypadButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_width">115dp</item>
        <item name="android:layout_height">82dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/backspace_color</item>
        <item name="android:backgroundTintMode">multiply</item>
    </style>

    <style name="backspaceButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_width">115dp</item>
        <item name="android:layout_height">82dp</item>
    </style>

    <!-- Style for TextInputLayout -->
    <style name="Widget.Material3.TextInputLayout.OutlinedBox"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">?attr/colorBackgroundInput</item>
        <item name="boxStrokeErrorColor">?attr/colorError</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
    </style>
</resources>