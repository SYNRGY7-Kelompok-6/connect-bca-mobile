<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Theme.ConnectBCA" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <item name="android:buttonTint">@color/colorPrimaryDark</item>

        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorPrimaryDark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/neutral09</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryLight</item>
        <item name="colorOnSecondary">@color/colorPrimaryDark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here -->
    </style>

    <style name="ProgressBar">
        <item name="indicatorColor">@color/colorPrimaryLight</item>
        <item name="trackColor">@color/colorPrimary</item>
    </style>

    <style name="AlertDialog">
        <item name="backgroundTint">@color/colorPrimaryDark</item>
    </style>

    <style name="recepient_card">
        <item name="android:background">@color/colorPrimaryLight</item>
    </style>

    <style name="tab_color">
        <item name="tabTextColor">@color/neutral09</item>
        <item name="tabSelectedTextColor">@color/neutral01</item>
    </style>

    <!-- Style for PIN circles -->
    <style name="PinCircle">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/empty_circle_background</item>
    </style>

    <!-- Style for keypad buttons -->
    <style name="KeypadButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_width">115dp</item>
        <item name="android:layout_height">82dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/backspace_color</item>
        <item name="android:backgroundTintMode">multiply</item>
    </style>

    <style name="backspaceButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_width">115dp</item>
        <item name="android:layout_height">82dp</item>
    </style>

</resources>
