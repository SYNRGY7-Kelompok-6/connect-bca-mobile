<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="Theme.ConnectBCA" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorPrimaryDark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimaryLight</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryLight</item>
        <item name="colorOnSecondary">@color/colorPrimaryDark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here -->
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <item name="android:buttonTint">@color/colorPrimaryDark</item>
    </style>

    <style name="ProgressBar">
        <item name="indicatorColor">@color/colorPrimaryLight</item>
        <item name="trackColor">@color/colorPrimary</item>
    </style>

</resources>
