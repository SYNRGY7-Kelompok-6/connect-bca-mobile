<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.team6.connectbca.ui.fragment.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_qrisFragment"
            app:destination="@id/qrisFragment" />
        <action
            android:id="@+id/action_homeFragment_to_mutationFragment"
            app:destination="@id/mutationFragment" />
        <action
            android:id="@+id/action_homeFragment_to_favoritesTransferFragment"
            app:destination="@id/favoritesTransferFragment" />
    </fragment>
    <fragment
        android:id="@+id/mutationFragment"
        android:name="com.team6.connectbca.ui.fragment.mutation.MutationFragment"
        android:label="fragment_mutation"
        tools:layout="@layout/fragment_mutation">
        <action
            android:id="@+id/action_mutationFragment_to_paymentReceiptFragment"
            app:destination="@id/paymentReceiptFragment" />
    </fragment>
    <fragment
        android:id="@+id/qrisFragment"
        android:name="com.team6.connectbca.ui.fragment.qris.QrisFragment"
        android:label="fragment_qris"
        tools:layout="@layout/fragment_qris">
        <action
            android:id="@+id/action_qrisFragment_to_qrisPaymentFragment"
            app:destination="@id/qrisPaymentFragment" />
        <action
            android:id="@+id/action_qrisFragment_to_pinFragment"
            app:destination="@id/pinFragment" />
        <action
            android:id="@+id/action_qrisFragment_to_showQrFragment"
            app:destination="@id/showQrFragment" />
    </fragment>
    <fragment
        android:id="@+id/qrisPaymentFragment"
        android:name="com.team6.connectbca.ui.fragment.qris.QrisPaymentFragment"
        android:label="fragment_qris_payment"
        tools:layout="@layout/fragment_qris_payment">
        <action
            android:id="@+id/action_qrisPaymentFragment_to_pinFragment"
            app:destination="@id/pinFragment" />
    </fragment>
    <fragment
        android:id="@+id/findDestinationBankFragment"
        android:name="com.team6.connectbca.ui.fragment.transfer.FindDestinationBankFragment"
        android:label="fragment_find_destination_bank"
        tools:layout="@layout/fragment_find_destination_bank">
        <action
            android:id="@+id/action_findDestinationBankFragment_to_recepientDetailFragment"
            app:destination="@id/recepientDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/favoritesTransferFragment"
        android:name="com.team6.connectbca.ui.fragment.transfer.FavoritesTransferFragment"
        android:label="fragment_favorites_transfer"
        tools:layout="@layout/fragment_favorites_transfer">
        <action
            android:id="@+id/action_favoritesTransferFragment2_to_newDestinationFragment"
            app:destination="@id/newDestinationFragment" />
    </fragment>
    <fragment
        android:id="@+id/newDestinationFragment"
        android:name="com.team6.connectbca.ui.fragment.transfer.NewDestinationFragment"
        android:label="fragment_new_destination"
        tools:layout="@layout/fragment_new_destination">
        <action
            android:id="@+id/action_newDestinationFragment_to_findDestinationBankFragment"
            app:destination="@id/findDestinationBankFragment" />
    </fragment>
    <fragment
        android:id="@+id/recepientDetailFragment"
        android:name="com.team6.connectbca.ui.fragment.transfer.RecepientDetailFragment"
        android:label="fragment_recepient_detail"
        tools:layout="@layout/fragment_recepient_detail">
        <action
            android:id="@+id/action_recepientDetailFragment_to_inputTransferAmountFragment"
            app:destination="@id/inputTransferAmountFragment" />
    </fragment>
    <fragment
        android:id="@+id/inputTransferAmountFragment"
        android:name="com.team6.connectbca.ui.fragment.transfer.InputTransferAmountFragment"
        android:label="fragment_input_transfer_amount"
        tools:layout="@layout/fragment_input_transfer_amount">
        <action
            android:id="@+id/action_inputTransferAmountFragment_to_pinFragment2"
            app:destination="@id/pinFragment" />
    </fragment>
    <fragment
        android:id="@+id/pinFragment"
        android:name="com.team6.connectbca.ui.fragment.pin.PinFragment"
        android:label="fragment_pin"
        tools:layout="@layout/fragment_pin" />
    <fragment

        android:id="@+id/paymentReceiptFragment"
        android:name="com.team6.connectbca.ui.fragment.transfer.PaymentReceiptFragment"
        android:label="fragment_payment_receipt"
        tools:layout="@layout/fragment_payment_receipt">
        <argument
            android:name="transactionId"
            app:argType="string" />
        <action
            android:id="@+id/action_paymentReceiptFragment_to_mutationFragment"
            app:destination="@id/mutationFragment" />
    </fragment>

    <fragment
        android:id="@+id/showQrFragment"
        android:name="com.team6.connectbca.ui.fragment.ShowQrFragment"
        android:label="fragment_show_qr"
        tools:layout="@layout/fragment_show_qr" />
</navigation>