<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_new_destination"
    app:startDestination="@id/newDestinationFragment">

    <fragment
        android:id="@+id/findDestinationBankFragment"
        android:name="com.team6.connectbca.ui.fragment.transfer.FindDestinationBankFragment"
        android:label="Find Destination Bank Fragment">
        <action
            android:id="@+id/actionFindDestinationBankFragmentToNewDestinationFragment"
            app:destination="@id/newDestinationFragment">
            <argument
                android:name="selectedBank"
                app:argType="string"/>
        </action>
    </fragment>

    <fragment
        android:id="@+id/newDestinationFragment"
        android:name="com.team6.connectbca.ui.fragment.transfer.NewDestinationFragment"
        android:label="fragment_new_destination"
        tools:layout="@layout/fragment_new_destination">
        <argument
            android:name="selectedBankName"
            app:argType="string"
            android:defaultValue="" />
        <argument
            android:name="accountNumber"
            app:argType="string"
            android:defaultValue="" />
        <action
            android:id="@+id/action_newDestinationFragment_to_findDestinationBankFragment"
            app:destination="@id/findDestinationBankFragment" />
    </fragment>
</navigation>