<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ui.fragment.QrisPaymentFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginBottom="8dp"
        android:background="@android:color/transparent"
        app:contentInsetStartWithNavigation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="QRIS Payment" />

    <ImageView
        android:id="@+id/qris_logo"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/qris_logo_description"
        android:src="@drawable/qris_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <TextView
        android:id="@+id/transaction_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/transaction_name"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/qris_logo" />

    <TextView
        android:id="@+id/beneficiary_account_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/beneficiary_account_name"
        app:layout_constraintEnd_toStartOf="@id/dot_icon"

        app:layout_constraintTop_toBottomOf="@id/transaction_name" />

    <ImageView
        android:id="@+id/dot_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/info_icon"
        android:src="@drawable/ic_dot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/transaction_name" />


    <TextView
        android:id="@+id/beneficiary_account_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/beneficiary_account_number"
        app:layout_constraintStart_toEndOf="@id/dot_icon"
        app:layout_constraintTop_toTopOf="@id/beneficiary_account_name" />

    <TextView
        android:id="@+id/tv_transaction_nominal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:text="Nominal transaksi"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/beneficiary_account_name" />

    <TextView
        android:id="@+id/tv_currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/currency"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="@id/tv_transaction_nominal"
        app:layout_constraintTop_toBottomOf="@id/tv_transaction_nominal" />

    <TextView
        android:id="@+id/tv_total_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/balance_inquiry_value"
        android:textSize="40sp"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@id/tv_currency"
        app:layout_constraintTop_toTopOf="@id/tv_currency" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_source_of_funds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_currency">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/tv_source_of_funds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sumber Dana"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_bank_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/account_bank"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_source_of_funds" />

            <ImageView
                android:id="@+id/dot_icon_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_dot"
                app:layout_constraintStart_toEndOf="@id/tv_bank_account"
                app:layout_constraintTop_toTopOf="@id/tv_bank_account" />

            <TextView
                android:id="@+id/tv_account_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/account_number"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/dot_icon_2"
                app:layout_constraintTop_toTopOf="@id/dot_icon_2" />

            <TextView
                android:id="@+id/tv_currency_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/currency"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_bank_account" />

            <TextView
                android:id="@+id/tv_balance_inquiry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:text="@string/balance_inquiry_value"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/tv_currency_account"
                app:layout_constraintTop_toBottomOf="@id/tv_account_number" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <GridLayout
        android:id="@+id/numeric_keypad"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:alignmentMode="alignMargins"
        android:columnCount="3"
        android:rowCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_source_of_funds">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_1"
            style="@style/KeypadButton"
            android:contentDescription="Satu"
            android:text="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_2"
            style="@style/KeypadButton"
            android:contentDescription="Dua"
            android:text="2" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_3"
            style="@style/KeypadButton"
            android:contentDescription="Tiga"
            android:text="3" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_4"
            style="@style/KeypadButton"
            android:contentDescription="Empat"
            android:text="4" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_5"
            style="@style/KeypadButton"
            android:contentDescription="Lima"
            android:text="5" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_6"
            style="@style/KeypadButton"
            android:contentDescription="Enam"
            android:text="6" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_7"
            style="@style/KeypadButton"
            android:contentDescription="Tujuh"
            android:text="7" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_8"
            style="@style/KeypadButton"
            android:contentDescription="Delapan"
            android:text="8" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_9"
            style="@style/KeypadButton"
            android:contentDescription="Sembilan"
            android:text="9" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_delete"
            style="@style/backspaceButton"
            android:layout_gravity="center"
            android:contentDescription="Tombol Hapus"
            app:icon="@drawable/ic_backspace"
            app:iconGravity="textTop"
            app:iconSize="38dp"
            app:iconTint="@color/backspace_color" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_0"
            style="@style/KeypadButton"
            android:contentDescription="Tombol Nol"
            android:text="0" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_done"
            style="@style/backspaceButton"
            android:layout_gravity="top"
            android:contentDescription="Tombol Selesai"
            app:icon="@drawable/ic_enter"
            app:iconGravity="textTop"
            app:iconSize="38dp"
            app:iconTint="@color/backspace_color" />
    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>