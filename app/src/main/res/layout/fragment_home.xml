<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ui.fragment.HomeFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"

        android:background="@android:color/transparent"
        app:contentInsetStartWithNavigation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Hi, Binar Academy"
                android:textColor="@color/neutral01"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/ivIcon"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivNotificationIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/ivNotificationIcon"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.appbar.MaterialToolbar>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardBalance"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_margin="12dp"
        app:cardElevation="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:strokeWidth="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_balance_background"
            android:paddingStart="22dp"
            android:paddingTop="14dp"
            android:paddingEnd="18dp"
            android:paddingBottom="30dp">

            <TextView
                android:id="@+id/tvAccountNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="145 267 389 5162"
                android:textColor="@color/neutral01"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivIconCopy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_close"
                app:layout_constraintBottom_toBottomOf="@id/tvAccountNumber"
                app:layout_constraintStart_toEndOf="@id/tvAccountNumber"
                app:layout_constraintTop_toTopOf="@id/tvAccountNumber" />

            <TextView
                android:id="@+id/tvCurrency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:text="IDR"
                android:textColor="@color/neutral01"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvAccountNumber" />

            <TextView
                android:id="@+id/tvBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="***********"
                android:textColor="@color/neutral01"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@id/tvCurrency"
                app:layout_constraintStart_toEndOf="@id/tvCurrency"
                app:layout_constraintTop_toTopOf="@+id/tvCurrency" />

            <ImageView
                android:id="@+id/ivIconVisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close"
                app:layout_constraintBottom_toBottomOf="@id/tvCurrency"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvCurrency" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/cardBalance">

        <!-- E-Wallet -->
        <ImageView
            android:id="@+id/e_wallet_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_item"
            android:padding="20dp"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toStartOf="@id/qris_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_close" />

        <TextView
            android:id="@+id/e_wallet_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-Wallet"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/e_wallet_icon"
            app:layout_constraintStart_toStartOf="@id/e_wallet_icon"
            app:layout_constraintTop_toBottomOf="@id/e_wallet_icon" />

        <!-- QRIS -->
        <ImageView
            android:id="@+id/qris_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_item"
            android:padding="20dp"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toStartOf="@id/transfer_icon"
            app:layout_constraintStart_toEndOf="@id/e_wallet_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_qris" />

        <TextView
            android:id="@+id/qris_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QRIS"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/qris_icon"
            app:layout_constraintStart_toStartOf="@id/qris_icon"
            app:layout_constraintTop_toBottomOf="@id/qris_icon" />

        <!-- Transfer -->
        <ImageView
            android:id="@+id/flazz_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_item"
            android:padding="20dp"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/qris_icon"
            app:layout_constraintTop_toTopOf="@id/mutation_icon"
            app:srcCompat="@drawable/ic_transfer" />

        <TextView
            android:id="@+id/flazz_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flazz"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/flazz_icon"
            app:layout_constraintStart_toStartOf="@id/flazz_icon"
            app:layout_constraintTop_toBottomOf="@id/flazz_icon" /><!-- E-Wallet -->

        <ImageView
            android:id="@+id/mutation_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_item"
            android:padding="20dp"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toStartOf="@id/qris_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/e_wallet_text"
            app:srcCompat="@drawable/ic_close" />

        <TextView
            android:id="@+id/mutation_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mutasi"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/mutation_icon"
            app:layout_constraintStart_toStartOf="@id/mutation_icon"
            app:layout_constraintTop_toBottomOf="@id/mutation_icon" />

        <!-- QRIS -->
        <ImageView
            android:id="@+id/va_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_item"
            android:padding="20dp"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toStartOf="@id/transfer_icon"
            app:layout_constraintStart_toEndOf="@id/e_wallet_icon"
            app:layout_constraintTop_toTopOf="@id/mutation_icon"
            app:srcCompat="@drawable/ic_qris" />

        <TextView
            android:id="@+id/va_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Virtual\nAccount"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/va_icon"
            app:layout_constraintStart_toStartOf="@id/va_icon"
            app:layout_constraintTop_toBottomOf="@id/va_icon" />

        <!-- Transfer -->
        <ImageView
            android:id="@+id/transfer_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_item"
            android:padding="20dp"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/qris_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_transfer" />

        <TextView
            android:id="@+id/transfer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transfer"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/transfer_icon"
            app:layout_constraintStart_toStartOf="@id/transfer_icon"
            app:layout_constraintTop_toBottomOf="@id/transfer_icon" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>