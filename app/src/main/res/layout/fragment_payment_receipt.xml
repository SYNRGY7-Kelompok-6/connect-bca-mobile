<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.transfer.PaymentReceiptFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivLogo"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginVertical="40dp"
        android:layout_marginHorizontal="30dp"
        android:src="@drawable/connect_logo_shdw"
        android:contentDescription="Logo aplikasi"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QR Bayar"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:textColor="?android:textColorPrimary"
        app:layout_constraintTop_toBottomOf="@id/ivLogo"
        app:layout_constraintStart_toStartOf="@id/ivLogo"
        app:layout_constraintEnd_toEndOf="@id/ivLogo"
        android:layout_marginStart="16dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pembayaran Berhasil!"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textColor="?android:textColorPrimary"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="@id/tvTitle"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11 Jul 2024 â€¢ 15:32:06 WIB"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="?android:textColorPrimary"
        app:layout_constraintTop_toBottomOf="@id/tvStatus"
        app:layout_constraintStart_toStartOf="@id/tvStatus"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvRefNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No. Ref: 240715112203172778"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="?android:textColorPrimary"
        app:layout_constraintTop_toBottomOf="@id/tvDate"
        app:layout_constraintStart_toStartOf="@id/tvDate"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvRefNumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvRecipientLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Penerima"
                android:textSize="14sp"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="?android:textColorPrimary"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvRecipientName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NABILA MAZAYA"
                android:textSize="20sp"
                android:layout_marginTop="8dp"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textColor="?android:textColorPrimary"
                app:layout_constraintTop_toBottomOf="@id/tvRecipientLabel"
                app:layout_constraintStart_toStartOf="@id/tvRecipientLabel"/>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                android:layout_marginVertical="24dp"
                app:layout_constraintTop_toBottomOf="@id/tvRecipientName"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvTotalTransactionLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Transaksi"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="?android:textColorPrimary"
                app:layout_constraintTop_toBottomOf="@id/divider"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvTotalTransaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp150.000"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textColor="?android:textColorPrimary"
                app:layout_constraintTop_toTopOf="@id/tvTotalTransactionLabel"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvSourceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sumber Dana"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="?android:textColorPrimary"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@id/tvTotalTransactionLabel"
                app:layout_constraintStart_toStartOf="@id/tvTotalTransactionLabel"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvSourceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NIA MILLATUL IZZA"
                android:textSize="20sp"
                android:layout_marginTop="8dp"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textColor="?android:textColorPrimary"
                app:layout_constraintTop_toBottomOf="@id/tvSourceLabel"
                app:layout_constraintStart_toStartOf="@id/tvSourceLabel"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvSourceBank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bank Connect - *****5162"
                android:layout_marginTop="8dp"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="?android:textColorPrimary"
                app:layout_constraintTop_toBottomOf="@id/tvSourceName"
                app:layout_constraintStart_toStartOf="@id/tvSourceName"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvQrisRefLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No. Referensi QRIS"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="?android:textColorPrimary"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@id/tvSourceBank"
                app:layout_constraintStart_toStartOf="@id/tvSourceBank"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvQrisRef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="56789584370"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textColor="?android:textColorPrimary"
                app:layout_constraintTop_toTopOf="@id/tvQrisRefLabel"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvAcquirerLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pengakuisisi"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="?android:textColorPrimary"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/tvQrisRefLabel"
                app:layout_constraintStart_toStartOf="@id/tvQrisRefLabel"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvAcquirer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DANA"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textColor="?android:textColorPrimary"
                app:layout_constraintTop_toTopOf="@id/tvAcquirerLabel"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvMerchantPanLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Merchant PAN"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="?android:textColorPrimary"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/tvAcquirerLabel"
                app:layout_constraintStart_toStartOf="@id/tvAcquirerLabel"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvMerchantPan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="98765432101234"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textColor="?android:textColorPrimary"
                app:layout_constraintTop_toTopOf="@id/tvMerchantPanLabel"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvCustomerPanLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer PAN"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="?android:textColorPrimary"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/tvMerchantPanLabel"
                app:layout_constraintStart_toStartOf="@id/tvMerchantPanLabel"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvCustomerPan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123456789034567"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textColor="?android:textColorPrimary"
                app:layout_constraintTop_toTopOf="@id/tvCustomerPanLabel"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnClose"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:text="Tutup"
        android:textColor="?android:textColorPrimary"
        app:cornerRadius="8dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnShare"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="Tutup halaman ini"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnShare"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:text="Bagikan"
        android:textColor="?android:textColorPrimary"
        app:cornerRadius="8dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="@id/btnClose"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnClose"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="Bagikan bukti pembayaran"/>

</androidx.constraintlayout.widget.ConstraintLayout>