<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dailyMutationList"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.MonthMutationFragment">

    <TextView
        android:id="@+id/tvNoMutationMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_transaction_month"
        android:textSize="16sp"
        android:textColor="?android:textColorPrimary"
        android:textStyle="bold"
        android:layout_margin="12dp"
        android:visibility="gone"
        android:contentDescription="@string/no_transaction_month"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvMonth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/transaction_date"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="?android:textColorPrimary"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="12dp"
        android:contentDescription="@string/transaction_date_description"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/monthMutationWrapCard"/>

    <com.google.android.material.card.MaterialCardView
        style="@style/CardBackground"
        android:id="@+id/monthMutationWrapCard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="12dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvMonth"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="14dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/monthMutationRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/mutation_item_row"
            android:clipToPadding="false"/>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
