<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainCoordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="?attr/colorPrimary"
    tools:context=".ui.fragment.MutationFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomSheet"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimaryVariant"
            app:title="Informasi Saldo"
            android:layout_marginBottom="8dp"
            app:titleTextColor="?android:textColorPrimary"
            app:contentInsetStartWithNavigation="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="Toolbar with balance information"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvBalanceText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jumlah Saldo"
            android:layout_marginStart="12dp"
            android:layout_marginTop="14dp"
            android:textColor="?android:textColorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            android:contentDescription="Text view showing balance label"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvBalanceAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rp 28.062.003"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp"
            android:textColor="?android:textColorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/cardCustomer"
            app:layout_constraintTop_toBottomOf="@id/tvBalanceText"
            android:contentDescription="Text view showing the balance amount"/>

        <include
            android:id="@+id/cardCustomer"
            layout="@layout/customer_bank_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:elevation="14dp"
            app:layout_constraintTop_toBottomOf="@id/tvBalanceAmount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="Customer bank card"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvDeposit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.45"
            android:foregroundGravity="center"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:backgroundTint="?attr/colorOnSecondary"
            android:elevation="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardCustomer"
            android:contentDescription="Card view showing recent deposit">

            <LinearLayout
                android:id="@+id/depositLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvRecentMonthDeposit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bulan Juni"
                    android:textAlignment="center"
                    android:textColor="?attr/colorSecondaryVariant"
                    android:contentDescription="Text view showing recent month deposit month"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvRecentMonthDepositAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rp 359.000"
                    android:textAlignment="center"
                    android:textColor="?attr/colorSecondaryVariant"
                    android:contentDescription="Text view showing recent month deposit amount"/>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvWithdrawal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.45"
            android:foregroundGravity="center"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="4dp"
            android:orientation="vertical"
            android:backgroundTint="?attr/colorOnSecondary"
            android:elevation="14dp"
            app:layout_constraintStart_toEndOf="@id/cvDeposit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardCustomer"
            android:contentDescription="Card view showing recent withdrawal">

            <LinearLayout
                android:id="@+id/withdrawalLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvRecentMonthWithdrawal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bulan Juni"
                    android:textAlignment="center"
                    android:textColor="?attr/colorSecondaryVariant"
                    android:contentDescription="Text view showing recent month withdrawal month"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvRecentMonthWithdrawalAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rp 359.000"
                    android:textAlignment="center"
                    android:textColor="?attr/colorSecondaryVariant"
                    android:contentDescription="Text view showing recent month withdrawal amount"/>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomSheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:behavior_hideable="false"
        app:cardCornerRadius="28dp"
        app:behavior_peekHeight="0dp"
        app:strokeColor="?attr/colorPrimaryVariant"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        android:contentDescription="Bottom sheet container">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <com.google.android.material.bottomsheet.BottomSheetDragHandleView
                android:id="@+id/dragHandle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tint="?android:textColorPrimary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="Bottom sheet drag handle"/>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:contentDescription="Tabs Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabMode="fixed"
                app:tabGravity="fill"
                android:elevation="24dp"
                app:tabBackground="?attr/colorPrimaryVariant"
                app:circularflow_radiusInDP="24dp"
                app:tabTextColor="?android:textColorPrimary"
                app:tabIndicatorColor="?android:textColorPrimary"
                app:layout_constraintTop_toBottomOf="@id/dragHandle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tabLayout"
                app:layout_constraintBottom_toBottomOf="parent"
                android:contentDescription="ViewPager displaying tab content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>