<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainCoordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="?attr/colorPrimary"
    tools:context=".ui.fragment.MutationFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomSheet"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:background="?attr/colorPrimaryVariant"
            app:title="Informasi Saldo"
            app:titleTextColor="?android:textColorPrimary"
            app:contentInsetStartWithNavigation="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="@string/info_saldo_toolbar_description"/>

        <com.google.android.material.progressindicator.LinearProgressIndicator
            style="@style/ProgressBar"
            android:id="@+id/mutationProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/login_loading_description"
            android:visibility="gone"
            android:indeterminate="true"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvBalanceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/balance_inquiry_title"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:textColor="?android:textColorPrimary"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            android:contentDescription="@string/balance_inquiry_title"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvBalanceCurrency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp"
            android:textColor="?android:textColorPrimary"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvBalanceAmount"
            app:layout_constraintBottom_toTopOf="@id/cardCustomer"
            app:layout_constraintTop_toBottomOf="@id/tvBalanceText" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvBalanceAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/balance_inquiry_value"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginStart="6dp"
            android:textColor="?android:textColorPrimary"
            app:layout_constraintStart_toEndOf="@id/tvBalanceCurrency"
            app:layout_constraintEnd_toStartOf="@id/btnShowBalance"
            app:layout_constraintBottom_toBottomOf="@id/tvBalanceCurrency"
            app:layout_constraintTop_toTopOf="@id/tvBalanceCurrency"
            android:contentDescription="@string/balance_inquiry_value"/>

        <com.google.android.material.button.MaterialButton
            style="?attr/materialIconButtonStyle"
            android:id="@+id/btnShowBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:contentDescription="@string/account_balance_visibility_description"
            app:icon="@drawable/ic_visibility"
            app:iconTint="@color/neutral01"
            app:layout_constraintBottom_toBottomOf="@id/tvBalanceAmount"
            app:layout_constraintStart_toEndOf="@id/tvBalanceAmount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvBalanceAmount" />

        <include
            android:id="@+id/cardCustomer"
            layout="@layout/customer_bank_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:elevation="14dp"
            app:layout_constraintTop_toBottomOf="@id/tvBalanceCurrency"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="@string/customer_bank_card_description"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvDeposit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:foregroundGravity="center"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:backgroundTint="?attr/colorOnSecondary"
            android:elevation="14dp"
            app:layout_constraintWidth_percent="0.45"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardCustomer"
            android:contentDescription="@string/card_deposit_description">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:drawable/ic_input_add"
                android:backgroundTint="@color/neutral01"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="6dp"/>

            <LinearLayout
                android:id="@+id/depositLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvRecentMonthDeposit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/card_deposit_month"
                    android:textAlignment="center"
                    android:textColor="?attr/colorSecondaryVariant"
                    android:contentDescription="@string/month_income_description"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvRecentMonthDepositAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/month_income"
                    android:textAlignment="center"
                    android:textColor="?attr/colorSecondaryVariant"
                    android:contentDescription="@string/month_income"/>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvWithdrawal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.45"
            android:foregroundGravity="center"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="4dp"
            android:orientation="vertical"
            android:backgroundTint="?attr/colorOnSecondary"
            android:elevation="14dp"
            app:layout_constraintStart_toEndOf="@id/cvDeposit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardCustomer"
            android:contentDescription="@string/month_withdrawal_description">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:drawable/menu_frame"
                android:backgroundTint="@color/neutral01"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="6dp"/>

            <LinearLayout
                android:id="@+id/withdrawalLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvRecentMonthWithdrawal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/card_withdrawal_month"
                    android:textAlignment="center"
                    android:textColor="?attr/colorSecondaryVariant"
                    android:contentDescription="@string/month_withdrawal_description"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvRecentMonthWithdrawalAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/month_withdrawal"
                    android:textAlignment="center"
                    android:textColor="?attr/colorSecondaryVariant"
                    android:contentDescription="@string/month_withdrawal"/>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomSheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:behavior_hideable="false"
        app:cardCornerRadius="28dp"
        app:behavior_peekHeight="0dp"
        app:strokeColor="?attr/colorPrimaryVariant"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        android:contentDescription="@string/mutasi">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <com.google.android.material.bottomsheet.BottomSheetDragHandleView
                android:id="@+id/dragHandle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tint="?android:textColorPrimary"
                android:contentDescription="@string/bottom_sheet_drag_description"/>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:contentDescription="@string/tab_layout_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabMode="fixed"
                app:tabGravity="fill"
                android:elevation="10dp"
                app:tabBackground="@android:color/transparent"
                app:circularflow_radiusInDP="24dp"
                app:tabTextColor="?android:textColorPrimary"
                app:tabIndicatorColor="?android:textColorPrimary" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>